rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    
    match /messages/{docId} {
    	allow read: if true; //request.auth.uid != null;
      allow create: if canCreate();
      allow update: if canCreate();
    }
    
    function canCreate() {
    	let isSignedIn = request.auth.uid != null;
      let isOwner = request.auth.uid == request.resource.data.uid;
      // let isNotBanned = exists (
      // 	/databases/$(database)/documents/banned/$(request.auth.uid)
      // ) == false;
      return isSignedIn && isOwner; // && isNotBanned;
    }
    
    match /lobby/{docId} {
    	allow read: if true;
      allow create: if request.auth.uid != null;
      //&& if user didn't create bet
      	
      	// exists (
      	// /databases/$(database)/documents/banned/$(request.auth.uid)
      	// ) == false; //true; //canCreate();
      //if they don't already have one open
      //if they're logged in
      // allow update: if admin;
    }
    
    match /users/{docId} {
    	allow read: if true;
      // allow create: if canCreate();
      // allow update: if canCreate();
      allow create: if docId == request.auth.uid;
      allow update: if docId == request.auth.uid;
    }
  }
}